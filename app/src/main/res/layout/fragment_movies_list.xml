<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorMovieBack">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/movies_list_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/movie_card_top_margin"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <View
                android:layout_width="@dimen/target_size"
                android:layout_height="@dimen/target_size"
                android:background="@drawable/ic_target"
                android:layout_marginVertical="@dimen/spacing_3x"
                android:layout_marginStart="@dimen/spacing_4x"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/movies_list"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/text_size_sub_title"
                android:textStyle="bold"
                android:layout_marginStart="@dimen/spacing_2x"
                android:layout_marginTop="@dimen/spacing_2_5x"/>
        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/movie_card"
            android:layout_width="@dimen/movie_card_width"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_3_5x"
            android:layout_marginTop="@dimen/spacing_4_5x"
            app:layout_constraintTop_toBottomOf="@id/movies_list_header"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:id="@+id/pic_movie_back_card"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:adjustViewBounds="true"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/pic_movie_back_card"
                android:contentDescription="@string/avengers_end_game" />

            <View
                android:id="@+id/mask"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:background="@drawable/ic_mask"
                app:layout_constraintBottom_toBottomOf="@+id/pic_movie_back_card"
                app:layout_constraintEnd_toEndOf="@+id/pic_movie_back_card"
                app:layout_constraintStart_toStartOf="@+id/pic_movie_back_card"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rating"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/text_size_body"
                android:textStyle="bold"
                android:background="@drawable/shape_heavy_rounded_rect_background_dark_blue"
                android:paddingVertical="@dimen/spacing_1x"
                android:layout_marginTop="@dimen/spacing_3x"
                android:layout_marginStart="@dimen/spacing_2x"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <View
                android:layout_width="@dimen/favourite_width"
                android:layout_height="@dimen/favourite_height"
                android:background="@drawable/ic_favorite"
                android:layout_marginTop="@dimen/spacing_3_5x"
                android:layout_marginEnd="@dimen/spacing_2x"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>



            <TextView
                android:id="@+id/genre_movie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_2x"

                android:layout_marginBottom="@dimen/dimenShiftBtwObjects"
                android:text="@string/action_adventure_fantasy"
                android:textColor="@color/colorDescriptionGenre"
                android:textSize="@dimen/text_size_description"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@id/count_review" />

            <ImageView
                android:id="@+id/star1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_2x"
                android:layout_marginTop="@dimen/dimenShiftBtwObjects"
                android:src="@drawable/pic_red_star_icon"
                app:layout_constraintEnd_toStartOf="@+id/star2"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/pic_movie_back_card"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/star2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimenShiftBtwObjects"
                android:src="@drawable/pic_red_star_icon"
                app:layout_constraintEnd_toStartOf="@+id/star3"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/star1"
                app:layout_constraintBottom_toBottomOf="@id/pic_movie_back_card"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/star3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimenShiftBtwObjects"
                android:src="@drawable/pic_red_star_icon"
                app:layout_constraintEnd_toStartOf="@+id/star4"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/star2"
                app:layout_constraintBottom_toBottomOf="@id/pic_movie_back_card"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/star4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimenShiftBtwObjects"
                android:src="@drawable/pic_red_star_icon"
                app:layout_constraintEnd_toStartOf="@+id/star5"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/star3"
                app:layout_constraintBottom_toBottomOf="@id/pic_movie_back_card"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/star5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimenShiftBtwObjects"
                android:src="@drawable/pic_grey_star_icon"
                app:layout_constraintEnd_toStartOf="@+id/count_review"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/star4"
                app:layout_constraintBottom_toBottomOf="@id/pic_movie_back_card"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/count_review"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_2x"
                android:layout_marginBottom="@dimen/spacing_2x"
                android:text="@string/count_reviews"
                android:textColor="@color/colorSmallText"
                android:textSize="@dimen/text_size_description"
                android:textStyle="bold"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/star5"
                app:layout_constraintTop_toTopOf="@id/star1"
                app:layout_constraintBottom_toBottomOf="@id/pic_movie_back_card" />


            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimenShiftBtwObjects"
                android:layout_marginTop="@dimen/dimenShiftBtwObjects"
                android:text="@string/avengers_end_game"
                android:textColor="@color/colorTextTitle"
                android:textSize="@dimen/text_size_sub_title"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/pic_movie_back_card" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimenShiftBtwObjects"
                android:text="@string/_137_min"
                android:textColor="@color/colorSmallText"
                android:textSize="@dimen/text_size_description"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/title" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>